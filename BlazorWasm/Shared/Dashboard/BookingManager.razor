@using ClientLibrary.Models
@using ClientLibrary.Models.Booking
@using ClientLibrary.Services.Contracts
@inject IProfessionalDashboardService DashboardService
@inject IJSRuntime JS

<div class="surface-card mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h4 class="mb-1">Gestión de Reservas</h4>
            <p class="text-muted mb-0">Revisá y gestioná las solicitudes de tus clientes</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-2 text-muted">Obteniendo reservas...</p>
        </div>
    }
    else if (Bookings == null || !Bookings.Any())
    {
        <div class="text-center py-5 bg-light rounded-3 border border-dashed">
            <i class="fa-regular fa-calendar-xmark fa-3x text-muted mb-3"></i>
            <h5>Sin reservas pendientes</h5>
            <p class="text-muted">Cuando un cliente reserve uno de tus servicios, aparecerá aquí.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Cliente</th>
                        <th>Servicio</th>
                        <th>Categoría</th>
                        <th>Fecha y Hora</th>
                        <th>Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Bookings)
                    {
                        <tr>
                            <td>
                                <div class="fw-bold">@booking.CustomerName</div>
                            </td>
                            <td>@booking.ServiceName</td>
                            <td>
                                <span class="badge bg-soft-success text-success rounded-pill px-2 py-1">
                                    @booking.CategoryName
                                </span>
                            </td>
                            <td>
                                <div><i class="fa-regular fa-calendar me-1 small"></i> @booking.ScheduledDate.ToShortDateString()</div>
                                <div class="text-muted small"><i class="fa-regular fa-clock me-1 small"></i> @booking.ScheduledDate.ToShortTimeString() hs</div>
                            </td>
@using ClientLibrary.Helper
                            <td>
                                <span class="badge @booking.State.BadgeClass">
                                    <i class="@booking.State.IconClass me-1 small"></i>
                                    @booking.State.DisplayName
                                </span>
                            </td>
                            <td class="text-end">
                                <div class="d-flex justify-content-end gap-2">
                                    @if (booking.State.CanAccept)
                                    {
                                        <button class="btn btn-sm btn-outline-success" @onclick="() => AcceptBooking(booking.Id)" title="Aceptar">
                                            <i class="fa-solid fa-check"></i>
                                        </button>
                                    }
                                    @if (booking.State.CanCancel)
                                    {
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => CancelBooking(booking.Id)" title="Cancelar">
                                            <i class="fa-solid fa-xmark"></i>
                                        </button>
                                    }
                                    @if (booking.State.CanStart)
                                    {
                                        <button class="btn btn-sm btn-success" @onclick="() => StartBooking(booking.Id)" title="Poner en curso">
                                            <i class="fa-solid fa-play"></i>
                                        </button>
                                    }
                                    @if (booking.State.CanFinish)
                                    {
                                        <button class="btn btn-sm btn-primary" @onclick="() => FinishBooking(booking.Id)" title="Finalizar">
                                            <i class="fa-solid fa-flag-checkered"></i>
                                        </button>
                                    }
                                    
                                    @if (!booking.State.CanAccept && !booking.State.CanCancel && !booking.State.CanStart && !booking.State.CanFinish)
                                    {
                                        <button class="btn btn-sm btn-light" disabled>
                                            <i class="fa-solid fa-ellipsis"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    [Parameter] public string ProfessionalId { get; set; } = string.Empty;
    [Parameter] public EventCallback OnStatusChanged { get; set; }

    private List<GetBooking> Bookings { get; set; } = new();
    private bool isLoading = true;
    private bool isProcessing = false;

    // Modal state
    private ConfirmationModal confirmationModal = default!;
    private string modalTitle = "Confirmación";
    private string modalMessage = "¿Estás seguro?";
    private string modalButtonText = "Confirmar";
    private string modalButtonClass = "btn-danger";
    private string modalAction = ""; // "accept" o "cancel"
    private Guid pendingBookingId = Guid.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadBookings();
    }

    private async Task LoadBookings()
    {
        isLoading = true;
        try
        {
            var response = await DashboardService.GetBookingsAsync(ProfessionalId);
            if (response != null)
            {
                Bookings = response;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading bookings: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task AcceptBooking(Guid id)
    {
        pendingBookingId = id;
        modalAction = "accept";
        modalTitle = "Confirmar Reserva";
        modalMessage = "¿Estás seguro de que querés aceptar esta reserva? El cliente recibirá una notificación de confirmación.";
        modalButtonText = "Aceptar Reserva";
        modalButtonClass = "btn-success";
        await confirmationModal.Show();
    }

    private async Task CancelBooking(Guid id)
    {
        pendingBookingId = id;
        modalAction = "cancel";
        modalTitle = "Cancelar Reserva";
        modalMessage = "¿Estás seguro de que querés cancelar esta reserva? Esta acción no se puede rehacer y se notificará al cliente.";
        modalButtonText = "Cancelar Reserva";
        modalButtonClass = "btn-danger";
        await confirmationModal.Show();
    }

    private async Task StartBooking(Guid id)
    {
        pendingBookingId = id;
        modalAction = "start";
        modalTitle = "Iniciar Servicio";
        modalMessage = "¿Estás seguro de que querés iniciar la prestación de este servicio ahora?";
        modalButtonText = "Iniciar Servicio";
        modalButtonClass = "btn-success";
        await confirmationModal.Show();
    }

    private async Task FinishBooking(Guid id)
    {
        pendingBookingId = id;
        modalAction = "finish";
        modalTitle = "Finalizar Servicio";
        modalMessage = "¿Estás seguro de que querés marcar este servicio como completado? Esto notificará al cliente.";
        modalButtonText = "Finalizar Servicio";
        modalButtonClass = "btn-primary";
        await confirmationModal.Show();
    }

    private async Task HandleConfirm()
    {
        if (pendingBookingId == Guid.Empty || isProcessing) return;

        isProcessing = true;
        try
        {
            ServiceResponse result;
            if (modalAction == "accept")
            {
                result = await DashboardService.AcceptBookingAsync(pendingBookingId);
                if (result.success) await JS.ToastrSuccess("Reserva aceptada correctamente");
            }
            else if (modalAction == "cancel")
            {
                result = await DashboardService.CancelBookingAsync(pendingBookingId);
                if (result.success) await JS.ToastrSuccess("Reserva cancelada correctamente");
            }
            else if (modalAction == "start")
            {
                result = await DashboardService.StartBookingAsync(pendingBookingId);
                if (result.success) await JS.ToastrSuccess("Servicio iniciado correctamente");
            }
            else // finish
            {
                result = await DashboardService.FinishBookingAsync(pendingBookingId);
                if (result.success) await JS.ToastrSuccess("Servicio finalizado correctamente");
            }

            if (!result.success)
            {
                await JS.ToastrError(result.Message);
            }
            else
            {
                await LoadBookings();
                await OnStatusChanged.InvokeAsync();
                await confirmationModal.Hide();
            }
        }
        catch (Exception ex)
        {
            await JS.ToastrError("Ocurrió un error inesperado");
            Console.WriteLine(ex.Message);
        }
        finally
        {
            isProcessing = false;
        }
    }

    private bool IsStatus(string? current, params string[] targets)
    {
        if (string.IsNullOrEmpty(current)) return false;
        var c = current.ToLower();
        return targets.Any(t => 
        {
            var target = t.ToLower();
            if (target == "pending") return c == "pending" || c == "pendiente";
            if (target == "confirmed") return c == "confirmed" || c == "confirmado";
            if (target == "inprogress") return c == "inprogress" || c == "en curso";
            if (target == "completed") return c == "completed" || c == "finalizado";
            if (target == "canceled") return c == "canceled" || c == "cancelado";
            return c == target;
        });
    }
}

<ConfirmationModal @ref="confirmationModal" 
                   Title="@modalTitle" 
                   Message="@modalMessage" 
                   ButtonText="@modalButtonText" 
                   ButtonClass="@modalButtonClass"
                   IsProcessing="@isProcessing"
                   OnConfirm="HandleConfirm" />

<style>
    .bg-soft-success {
        background-color: rgba(74, 124, 89, 0.1);
        color: #4a7c59 !important;
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(0,0,0,0.02);
    }
    
    .badge {
        font-weight: 500;
        letter-spacing: 0.3px;
    }
</style>
