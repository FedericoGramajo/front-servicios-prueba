@page "/reset-password/{token}"
@using System.ComponentModel.DataAnnotations
@using System.Web
@using ClientLibrary.Models
@inject HttpClient Http

<PageTitle>Nueva contraseña - ServicioAhora!</PageTitle>

<section class="auth-page py-5 py-lg-6">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7 col-xl-6">
                <div class="card auth-card shadow-lg border-0">
                    <div class="card-body p-4 p-lg-5">
                        <div class="text-center mb-4">
                            <a class="auth-brand d-inline-flex align-items-center" href="/">
                                <i class="fa-solid fa-house-chimney me-2"></i>
                                <span class="fw-bold">ServicioAhora!</span>
                            </a>
                            <p class="text-muted mb-0">Configurá una nueva contraseña para tu cuenta.</p>
                        </div>

                        @if (!IsTokenCheckComplete)
                        {
                            <div class="alert alert-info">Verificando el enlace de recuperación...</div>
                        }
                        else if (!IsTokenValid)
                        {
                            <div class="text-center">
                                <div class="alert alert-danger" role="alert">
                                    El enlace de recuperación es inválido o ya expiró.
                                </div>
                                <div class="d-grid gap-2">
                                    <a class="btn btn-primary" href="/forgot-password">Solicitar nuevo enlace</a>
                                    <a class="btn btn-link" href="/">Volver al inicio</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            @if (!string.IsNullOrWhiteSpace(Message))
                            {
                                <div class="alert alert-@AlertType" role="alert">@Message</div>
                            }

                            <EditForm Model="@changePassword" OnValidSubmit="ResetPassword">
                                <DataAnnotationsValidator />
                                <div class="mb-3">
                                    <label class="form-label fw-semibold" for="newPassword">Nueva contraseña</label>
                                    <InputText id="newPassword" type="password" class="form-control" @bind-Value="changePassword.Password" placeholder="••••••••" />
                                    <ValidationMessage For="() => changePassword.Password" />
                                </div>
                                <div class="mb-4">
                                    <label class="form-label fw-semibold" for="confirmPassword">Confirmar contraseña</label>
                                    <InputText id="confirmPassword" type="password" class="form-control" @bind-Value="changePassword.ConfirmPassword" placeholder="••••••••" />
                                    <ValidationMessage For="() => changePassword.ConfirmPassword" />
                                </div>
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-primary btn-lg">Confirmar</button>
                                    <a class="btn btn-outline-primary" href="/login">Volver a iniciar sesión</a>
                                    <a class="btn btn-link" href="/">Volver al inicio</a>
                                </div>
                            </EditForm>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    [Parameter]
    public string? Token { get; set; }
    private string Message { get; set; } = string.Empty;
    private string AlertType { get; set; } = "info";
    private bool IsTokenValid { get; set; }
    private bool IsTokenCheckComplete { get; set; }
    public ChangePassword changePassword { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        var uri = new Uri(NavManager.Uri);
        var query = HttpUtility.ParseQueryString(uri.Query);
        Console.WriteLine(Token);
        var tokenVerified = await VerifyToken(Token ?? string.Empty);
        if (!tokenVerified)
        {
            IsTokenValid = false;
            IsTokenCheckComplete = true;
            return;
        }
        IsTokenValid = tokenVerified;
        IsTokenCheckComplete = tokenVerified;
    }
    private async Task<bool> VerifyToken (string token)
    {
        try
        {
            Message = string.Empty;
            var verifyToken = new VerifyToken
            {
                Token = token
            };

            var result = await authenticationService.VerifyToken(verifyToken);
            return result.success;
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex);
            Message = "Ocurrió un error inesperado al enviar el correo.";
            AlertType = "danger";
            return false;
        }
    }

    private async Task ResetPassword()
    {
        try
        {
            Message = string.Empty;
            AlertType = "info";
            changePassword.Token = Token ?? string.Empty;

            var response = await authenticationService.ChangePassword(changePassword);
            if (!response.success)
            {
                AlertType = "danger";
                Message = "We were unable to update the password. Try again.";
                return;
            }

            AlertType = "success";
            Message = "Password changed successfully.";
        }
        catch (Exception ex)
            {
                Console.WriteLine(ex);
                Message = "An unexpected error occurred while sending the email.";
                AlertType = "danger";
            }
    }

    }
    
}
