            true
        )
    };

    private IEnumerable<string> Categories => Professionals.Select(p => p.Category).Distinct().OrderBy(c => c);
    private IEnumerable<string> Cities => Professionals.Select(p => p.City).Distinct().OrderBy(c => c);

    private IEnumerable<ProfessionalResult> FilteredResults => Professionals
        .Where(p => string.IsNullOrWhiteSpace(searchTerm) || p.Name.Contains(searchTerm, StringComparison.InvariantCultureIgnoreCase) || p.Specialty.Contains(searchTerm, StringComparison.InvariantCultureIgnoreCase) || p.Summary.Contains(searchTerm, StringComparison.InvariantCultureIgnoreCase))
        .Where(p => selectedCategory == "todas" || string.Equals(p.Category, selectedCategory, StringComparison.InvariantCultureIgnoreCase))
        .Where(p => selectedCity == "todas" || string.Equals(p.City, selectedCity, StringComparison.InvariantCultureIgnoreCase))
        .Where(MatchesRating)
        .Where(p => !onlyExpress || p.ExpressWindow);

    protected override void OnParametersSet()
    {
        searchTerm = Query ?? string.Empty;
    }

    private void OnSearch()
    {
        var term = searchTerm?.Trim();
        var queryString = string.IsNullOrWhiteSpace(term) ? string.Empty : $"?query={Uri.EscapeDataString(term)}";
        Navigation.NavigateTo($"/profesionales{queryString}");
    }

    private void ApplyFilters() => StateHasChanged();

    private string FilterLabel(string value) => string.Equals(value, "todas", StringComparison.OrdinalIgnoreCase) ? "Todas" : value;

    private string RatingLabel(string value) => value switch
    {
        "4" => "4.0+",
        "4.5" => "4.5+",
        "4.8" => "4.8+",
        _ => "Cualquiera"
    };

    private void GoToProfessional(string slug) => Navigation.NavigateTo($"/profesional/{slug}");

    private bool MatchesRating(ProfessionalResult result)
    {
        return selectedRating switch
        {
            "4" => result.Rating >= 4.0,
            "4.5" => result.Rating >= 4.5,
            "4.8" => result.Rating >= 4.8,
            _ => true
        };
    }

    private int CurrentYear => DateTime.Now.Year;

    private record ProfessionalResult(
        string Slug,
        string Name,
        string Specialty,
        string City,
        string Category,
        double Rating,
        int Projects,
        string ImageUrl,
        string Summary,
        IEnumerable<string> Services,
        bool ExpressWindow);
}
