@attribute [Route(RouteConstants.Professionals)]
@using System.Linq
@using ClientLibrary.Helper
@using ClientLibrary.Models.Landing
@using ClientLibrary.Models.Authentication.Rol.Professional
@using ClientLibrary.Services
@inject NavigationManager Navigation
@inject IProfessionalService ProfService

<PageTitle>Profesionales | ServicioAhora!</PageTitle>

<div class="landing-page">


    <main class="search-page container py-5 professional-search">
        <div class="d-flex flex-column gap-4">
            <div class="surface-card search-hero">
                <div class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center gap-3 justify-content-between">
                    <div>
                        <p class="text-uppercase fw-semibold text-primary mb-2">Profesionales verificados</p>
                        <h1 class="mb-2">Encontrá la persona ideal para tu hogar</h1>
                        <p class="mb-0 text-muted">Mostrando especialistas hogareños listos para ayudar</p>
                    </div>
                    <form class="search-bar" role="search" @onsubmit="ApplyFilters" @onsubmit:preventDefault>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-magnifying-glass"></i></span>
                            <input class="form-control" type="search" placeholder="Buscar profesionales por nombre o rubro..." aria-label="Buscar" @bind="searchTerm" />
                            <button class="btn btn-primary" type="submit">Buscar</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="surface-card">
                <div class="d-flex justify-content-between align-items-center mb-4 flex-column flex-lg-row gap-2">
                    <div class="d-flex align-items-center gap-2">
                        <h5 class="mb-0">@FilteredResults.Count() profesionales encontrados</h5>
                    </div>
                </div>

                @if (IsLoading)
                {
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row g-3">
                        @foreach (var professional in PaginatedResults)
                        {
                            <div class="col-12">
                                <div class="card professional-result shadow-sm border-0">
                                    <div class="row g-0 align-items-center">
                                        <div class="col-12 col-md-3">
                                            <div class="ratio ratio-1x1 m-3 rounded shadow-sm overflow-hidden bg-light" style="max-width: 150px;">
@using BlazorWasm.Shared.Components
                                                <div class="d-flex align-items-center justify-content-center" style="position: absolute; top: 0; left: 0; right: 0; bottom: 0;">
                                                    <StaffAvatar ImageUrl="@professional.ProfileImage" Name="@professional.FullName" Size="lg" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="card-body">
                                                <div class="d-flex align-items-center gap-2 mb-2 flex-wrap">
                                                    @foreach(var cat in professional.Categories.Take(2))
                                                    {
                                                        <span class="badge rounded-pill bg-primary-subtle text-primary">@cat</span>
                                                    }
                                                    <span class="badge rounded-pill bg-warning-subtle text-warning">
                                                        <i class="fa-solid fa-star me-1"></i>@professional.AvgRating.ToString("0.0")
                                                    </span>
                                                </div>
                                                <h5 class="card-title fw-bold mb-1">@professional.FullName</h5>
                                                <p class="mb-2 text-muted small">Especialista en @(string.Join(", ", professional.Categories))</p>
                                                <p class="card-text text-muted mb-0 small">Profesional verificado con @professional.BookingsCount servicios completados.</p>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-3 d-flex flex-column align-items-md-end gap-2 p-3">
                                            <button class="btn btn-outline-primary w-100" @onclick="() => GoToProfessional(professional.AppUserId)">Ver perfil</button>
                                            <button class="btn btn-primary w-100" @onclick="() => GoToProfessional(professional.AppUserId)">Contactar ahora</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        @if (!FilteredResults.Any())
                        {
                            <div class="col-12">
                                <div class="text-center py-5">
                                    <i class="fa-solid fa-user-slash fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">No encontramos profesionales que coincidan con tu búsqueda.</p>
                                    <button class="btn btn-link" @onclick="ClearFilters">Ver todos los profesionales</button>
                                </div>
                            </div>
                        }
                    </div>

                    @if (TotalPages > 1)
                    {
                        <div class="d-flex justify-content-center mt-5">
                            <nav aria-label="Paginación de profesionales">
                                <ul class="pagination shadow-sm">
                                    <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => ChangePage(CurrentPage - 1)">
                                            <i class="fa-solid fa-chevron-left"></i>
                                        </button>
                                    </li>
                                    @for (int i = 1; i <= TotalPages; i++)
                                    {
                                        var p = i;
                                        <li class="page-item @(CurrentPage == p ? "active" : "")">
                                            <button class="page-link" @onclick="() => ChangePage(p)">@p</button>
                                        </li>
                                    }
                                    <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => ChangePage(CurrentPage + 1)">
                                            <i class="fa-solid fa-chevron-right"></i>
                                        </button>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    }
                }
            </div>
        </div>
    </main>
</div>

@code {
    private List<GetProfessional> AllProfessionals = new();
    private bool IsLoading = true;
    private string searchTerm = string.Empty;

    // Pagination
    private int CurrentPage = 1;
    private int PageSize = 6;

    private IEnumerable<GetProfessional> FilteredResults => AllProfessionals
        .Where(p => string.IsNullOrWhiteSpace(searchTerm) || 
                   p.FullName.Contains(searchTerm, StringComparison.InvariantCultureIgnoreCase) || 
                   p.Categories.Any(c => c.Contains(searchTerm, StringComparison.InvariantCultureIgnoreCase)));

    private IEnumerable<GetProfessional> PaginatedResults => FilteredResults
        .Skip((CurrentPage - 1) * PageSize)
        .Take(PageSize);

    private int TotalPages => (int)Math.Ceiling(FilteredResults.Count() / (double)PageSize);

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        IsLoading = true;
        try
        {
            AllProfessionals = await ProfService.GetActiveProfessionalsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading professionals: {ex.Message}");
        }
        finally
        {
            IsLoading = false;
        }
    }

    private void ApplyFilters()
    {
        CurrentPage = 1;
        StateHasChanged();
    }

    private void ClearFilters()
    {
        searchTerm = string.Empty;
        CurrentPage = 1;
        StateHasChanged();
    }

    private void ChangePage(int newPage)
    {
        CurrentPage = newPage;
        StateHasChanged();
    }

    private void GoToProfessional(string id) => Navigation.NavigateTo(RouteConstants.Create(RouteConstants.ProfessionalDetail, id));
}
