            new FooterLinkModel("Profesionales", "/profesionales"),
            new FooterLinkModel("Garantías", "/#garantias")
        })
    };

    [SupplyParameterFromQuery(Name = "query")]
    public string? Query { get; set; }

    private string searchTerm = string.Empty;
    private string selectedCategory = "todas";
    private string selectedCity = "todas";
    private string selectedRating = "cualquiera";
    private bool onlyExpress;

    private readonly IReadOnlyList<ProfessionalResult> Professionals = new List<ProfessionalResult>
    {
        new(
