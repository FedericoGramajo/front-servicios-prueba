@attribute [Route(RouteConstants.ProfessionalDetailPage)]
@using System.Globalization
@using System.Linq
@using ClientLibrary.Helper
@using ClientLibrary.Models.Authentication.Rol.Professional
@using ClientLibrary.Models.ServicioAhora.ServOffering
@using ClientLibrary.Services
@inject NavigationManager Navigation
@inject IProfessionalService ProfService
@inject IServOfferingService ServiceService
@using BlazorWasm.Shared.Components
<PageTitle>Profesional - ServicioAhora!</PageTitle>

<div class="landing-page">

    <main class="container py-5">
        @if (isLoading)
        {
            <div class="d-flex justify-content-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
            </div>
        }
        else if (ProfessionalData is null)
        {
            <div class="alert alert-warning mt-4">No encontramos a este profesional. <a href="@RouteConstants.Search">Volver a buscar</a>.</div>
        }
        else
        {
            <div class="row g-4">
                <div class="col-lg-4">
                    <div class="surface-card h-100 text-center">
                        <div class="ratio ratio-1x1 mb-3 rounded overflow-hidden shadow-sm bg-light">

                            <div class="d-flex align-items-center justify-content-center" style="position: absolute; top: 0; left: 0; right: 0; bottom: 0;">
                                <StaffAvatar ImageUrl="@ProfessionalData.ProfileImage" Name="@ProfessionalData.FullName" Size="xl" />
                            </div>
                        </div>
                        <h2 class="mb-1">@ProfessionalData.FullName</h2>
                        <p class="text-muted mb-1">@(string.Join(", ", ProfessionalData.Categories))</p>
                        <div class="d-flex justify-content-center gap-3 my-3">
                            <span class="pill"><i class="fa-solid fa-star text-warning me-1"></i>@ProfessionalData.AvgRating.ToString("0.0")</span>
                            <span class="pill">@ProfessionalData.BookingsCount proyectos</span>
                        </div>
                        
                        @if (ProfessionalData.Licenses != null && ProfessionalData.Licenses.Any())
                        {
                            <div class="mb-3">
                                <p class="small fw-bold text-muted text-uppercase mb-2">Matrículas / Licencias</p>
                                <div class="d-flex flex-wrap gap-2 justify-content-center">
                                    @foreach (var license in ProfessionalData.Licenses)
                                    {
                                        <span class="badge bg-light text-dark border">@license.Number</span>
                                    }
                                </div>
                            </div>
                        }

                        <div class="d-grid gap-2 mt-4">
                            <a class="btn btn-primary" href="#servicios">Ver servicios (@ProfessionalData.ServicesCount)</a>
                            <a class="btn btn-outline-primary" href="@RouteConstants.Professionals">Explorar profesionales</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="surface-card h-100">
                        <div class="section-heading flex-column flex-lg-row text-lg-start text-center mb-4">
                            <div>
                                <p class="text-uppercase text-muted small mb-1">Catálogo de servicios</p>
                                <h3 class="mb-0">Soluciones ofrecidas</h3>
                            </div>
                        </div>

                        @if (ServicesByCategory == null || !ServicesByCategory.Any())
                        {
                            <div class="text-center py-5">
                                <i class="fa-solid fa-box-open fa-3x text-muted mb-3 opacity-25"></i>
                                <p class="text-muted">Este profesional aún no ha publicado servicios.</p>
                            </div>
                        }
                        else
                        {
                            @foreach (var group in ServicesByCategory)
                            {
                                <div class="service-group mb-5" id="servicios">
                                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
                                        <h5 class="mb-0 fw-bold border-start border-4 border-primary ps-3">@group.Key</h5>
                                        <span class="badge bg-primary-subtle text-primary">@group.Count() servicio(s)</span>
                                    </div>
                                    
                                    <div class="row g-3">
                                        @foreach (var service in group)
                                        {
                                            <div class="col-md-6 col-xl-4">
                                                <div class="card professional-service-card h-100 shadow-sm hover-elevate border-0 overflow-hidden">
                                                    <div class="ratio ratio-16x9 bg-light border-bottom">
                                                        <div class="d-flex align-items-center justify-content-center h-100 w-100">
                                                            @if (!string.IsNullOrEmpty(service.Image))
                                                            {
                                                                <img src="@service.Image" alt="@service.Name" class="w-100 h-100 object-fit-cover" />
                                                            }
                                                            else
                                                            {
                                                                <div class="text-center opacity-25">
                                                                    <i class="fa-solid fa-handshake-angle fa-2x mb-2"></i>
                                                                    <p class="small mb-0">Servicio Disponible</p>
                                                                </div>
                                                            }
                                                        </div>
                                                    </div>
                                                    <div class="card-body d-flex flex-column p-3">
                                                        <div class="d-flex justify-content-between align-items-start mb-2 gap-2">
                                                            <span class="badge rounded-pill bg-light text-secondary text-truncate" style="max-width: 100px;">@group.Key</span>
                                                            <span class="fw-bold text-primary text-nowrap">@service.BasePrice.ToString("C0", LocalCulture)</span>
                                                        </div>
                                                        <h6 class="fw-bold mb-2 text-dark line-clamp-2" style="min-height: 2.5rem;">@service.Name</h6>
                                                        <p class="text-muted small flex-grow-1 mb-3 line-clamp-3">@service.Description</p>
                                                        <button class="btn btn-outline-primary btn-sm mt-auto w-100 fw-semibold" @onclick="() => GoToService(service.Id.ToString())">
                                                            <i class="fa-solid fa-magnifying-glass-plus me-2"></i>Ver detalles
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        }
    </main>

</div>

@code {
    [Parameter]
    public string Slug { get; set; } = string.Empty;

    private static readonly CultureInfo LocalCulture = new("es-AR");

    private GetProfessional? ProfessionalData;
    private IEnumerable<IGrouping<string, GetServiceOffering>>? ServicesByCategory;
    private bool isLoading = true;

    protected override async Task OnParametersSetAsync()
    {
        isLoading = true;
        try 
        {
            if (!string.IsNullOrEmpty(Slug))
            {
                // In our current routes, Slug is the AppUserId
                ProfessionalData = await ProfService.GetByIdAsync(Slug);
                if (ProfessionalData != null)
                {
                    var services = await ServiceService.GetByProfessionalAsync(Slug);
                    ServicesByCategory = services.GroupBy(s => s.CategoryName);
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading professional profile: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoToService(string id) => Navigation.NavigateTo(RouteConstants.Create(RouteConstants.ServiceDetail, id));
}
