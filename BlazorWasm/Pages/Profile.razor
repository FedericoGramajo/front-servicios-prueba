@attribute [Route(RouteConstants.Profile)]
@attribute [Authorize]
@using ClientLibrary.Models.Authentication
@using ClientLibrary.Services.Contracts
@using BlazorWasm.Shared.Client
@inject AuthenticationStateProvider AuthStateProvider
@inject IAuthenticationService AuthenticationService

<PageTitle>Mi Perfil - ServicioAhora!</PageTitle>

<div class="landing-page min-vh-100 bg-light">
    <div class="container py-5">
        @if (UserProfile == null)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status"></div>
                <p class="mt-3 text-muted">Preparando tu perfil...</p>
            </div>
        }
        else
        {
            <div class="row g-4 mt-2">
                <!-- Sidebar / Navigation -->
                <div class="col-lg-3">
                    <div class="surface-card p-0 overflow-hidden shadow-sm border-0 mb-4 mb-lg-0">
                        <div class="p-4 text-center bg-primary text-white">
                            <i class="fa-solid fa-circle-user fa-3x mb-2 opacity-75"></i>
                            <h5 class="mb-0 fw-bold">Mi Cuenta</h5>
                            <p class="small opacity-75 mb-0">Configura tu experiencia</p>
                        </div>
                        <div class="nav flex-column nav-pills p-3" id="v-pills-tab" role="tablist">
                            <button class="nav-link @(activeTab == "cuenta" ? "active" : "") d-flex align-items-center mb-2" 
                                    @onclick='() => SetTab("cuenta")'>
                                <i class="fa-solid fa-user-gear me-3"></i>Datos Personales
                            </button>
                            <button class="nav-link @(activeTab == "direcciones" ? "active" : "") d-flex align-items-center mb-2" 
                                    @onclick='() => SetTab("direcciones")'>
                                <i class="fa-solid fa-map-location-dot me-3"></i>Mis Direcciones
                            </button>
                            <button class="nav-link d-flex align-items-center text-danger mt-3 opacity-75" disabled>
                                <i class="fa-solid fa-shield-halved me-3"></i>Seguridad (Pronto)
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Main Content Section -->
                <div class="col-lg-9">
                    <div class="tab-content" id="v-pills-tabContent">
                        @if (activeTab == "cuenta")
                        {
                            <div class="fade-in">
                                <ProfileInfoSection User="@UserProfile" OnProfileUpdated="LoadProfile" />
                            </div>
                        }
                        else if (activeTab == "direcciones")
                        {
                            <div class="fade-in">
                                <AddressSection UserId="@userId" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .nav-pills .nav-link {
        color: #495057;
        font-weight: 500;
        border-radius: 12px;
        padding: 0.8rem 1rem;
        transition: all 0.2s ease;
        border: 1px solid transparent;
        text-align: left;
    }
    
    .nav-pills .nav-link:hover {
        background-color: rgba(13, 110, 253, 0.05);
        color: #0d6efd;
    }
    
    .nav-pills .nav-link.active {
        background-color: #0d6efd;
        color: white;
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.15);
    }

    .fade-in {
        animation: fadeIn 0.3s ease-in-out;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .section-heading {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #eee;
    }
</style>

@code {
    [Parameter]
    [SupplyParameterFromQuery(Name = "tab")]
    public string? TabParam { get; set; }

    private UserDto? UserProfile { get; set; }
    private string userId = string.Empty;
    private string activeTab = "cuenta";

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        userId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value 
                 ?? authState.User.FindFirst("nameid")?.Value 
                 ?? string.Empty;

        // Si llega con ?tab=addresses desde el flujo de reserva, abrir la tab de direcciones
        if (!string.IsNullOrEmpty(TabParam) && TabParam.ToLower() == "addresses")
            activeTab = "direcciones";

        await LoadProfile();
    }

    private async Task LoadProfile()
    {
        var profile = await AuthenticationService.GetMyProfile();
        if (profile != null)
        {
            UserProfile = profile;
        }
    }

    private void SetTab(string tab)
    {
        activeTab = tab;
        StateHasChanged();
    }
}
