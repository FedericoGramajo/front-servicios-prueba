@attribute [Route(RouteConstants.Profile)]
@using System.Collections.Generic
@using ClientLibrary.Services
@using ClientLibrary.Models.Authentication

<PageTitle>Mi perfil - ServicioAhora!</PageTitle>

<div class="landing-page">


    <main class="container py-5 account-layout">
        <div class="d-flex flex-column gap-4">
            <div class="surface-card flex-grow-1">
                <div class="section-heading flex-column flex-lg-row">
                    <div>
                        <p class="text-uppercase text-muted small mb-1">Datos personales</p>
                        <h2 class="mb-0">Gestioná tu perfil</h2>
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn btn-outline-primary">Cancelar</button>
                        <button class="btn btn-primary">Guardar cambios</button>
                    </div>
                </div>

                <div class="row g-3">
                    <!-- Profile Picture Section -->
                    <div class="col-12 mb-3">
                        <div class="d-flex align-items-center gap-3">
                            <div class="position-relative" style="width: 100px; height: 100px;">
                                @if (!string.IsNullOrEmpty(ProfileImageDataUrl))
                                {
                                    <img src="@ProfileImageDataUrl" class="rounded-circle w-100 h-100 object-fit-cover border" alt="Foto de perfil" />
                                }
                                else
                                {
                                    <div class="rounded-circle w-100 h-100 bg-light d-flex align-items-center justify-content-center border">
                                        <i class="fa-regular fa-user fa-3x text-muted"></i>
                                    </div>
                                }
                                <label for="profileUpload" class="position-absolute bottom-0 end-0 btn btn-sm btn-primary rounded-circle p-1 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px; cursor: pointer;">
                                    <i class="fa-solid fa-camera fa-xs"></i>
                                </label>
                                <InputFile OnChange="OnInputFileChange" id="profileUpload" class="d-none" accept=".jpg, .jpeg, .png" />
                            </div>
                            <div>
                                <h5 class="mb-1">Foto de perfil</h5>
                                <p class="text-muted small mb-0">Recomendado: 300x300px, JPG o PNG.</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Nombre completo</label>
                        <input class="form-control" placeholder="Tu nombre" @bind="UserProfile.FullName" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Correo electrónico</label>
                        <input class="form-control" type="email" placeholder="correo@ejemplo.com" @bind="UserProfile.Email" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Teléfono</label>
                        <input class="form-control" type="tel" placeholder="11 4444 9999" @bind="UserProfile.PhoneNumber" />
                    </div>
                    
                    <div class="col-12 mt-4">
                        <label class="form-label fw-semibold d-block mb-2">Direcciones guardadas</label>
                        @foreach (var address in Addresses)
                        {
                            <div class="card mb-2 border-0 shadow-sm">
                                <div class="card-body d-flex justify-content-between align-items-center py-2">
                                    <div>
                                        <i class="fa-solid fa-map-pin text-primary me-2"></i>
                                        <span>@address.Street, @address.City</span>
                                        @if (address.IsPrimary)
                                        {
                                            <span class="badge bg-success-subtle text-success ms-2">Principal</span>
                                        }
                                    </div>
                                    <button class="btn btn-sm btn-outline-danger border-0" @onclick="() => DeleteAddress(address)">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        }
                        <button class="btn btn-outline-primary btn-sm mt-1" @onclick="ShowAddAddressModal">
                            <i class="fa-solid fa-plus me-1"></i> Agregar dirección
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </main>

    @if (showAddressModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Nueva dirección</h5>
                        <button type="button" class="btn-close" @onclick="CloseAddressModal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Calle y número</label>
                            <input type="text" class="form-control" @bind="newAddress.Street" placeholder="Ej. Av. Libertador 1234" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ciudad</label>
                            <input type="text" class="form-control" @bind="newAddress.City" placeholder="Ej. Buenos Aires" />
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" @bind="newAddress.IsPrimary" id="isPrimaryCheck">
                            <label class="form-check-label" for="isPrimaryCheck">
                                Establecer como principal
                            </label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseAddressModal">Cancelar</button>
                        <button type="button" class="btn btn-primary" @onclick="SaveAddress">Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    }


</div>

@code {
    [Inject]
    private IAuthenticationService AuthenticationService { get; set; } = default!;

    private UserDto UserProfile { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        UserProfile = await AuthenticationService.GetMyProfile();
        if (!string.IsNullOrEmpty(UserProfile.ProfileImage))
        {
            ProfileImageDataUrl = UserProfile.ProfileImage;
        }
    }

    private readonly SearchConfig SearchBar = new("Buscar servicios hogareños en ServicioAhora!", "Buscar");

    private readonly IReadOnlyList<MenuActionModel> AccountActions = MenuConstants.AccountActions;
    private readonly IReadOnlyList<NavLinkModel> PrimaryNavLinks = MenuConstants.PrimaryNavLinks;

    private readonly IReadOnlyList<string> FooterContact = new List<string>
    {
        "Tel: +54 11 5555 1111",
        "Email: hola@servicioahora.com",
        "Horario: Lunes a domingo 8 a 22 h"
    };

    private readonly IReadOnlyList<FooterGroupModel> FooterGroups = new List<FooterGroupModel>
    {
        new("Explorá más", new []
        {
            new FooterLinkModel("Servicios", RouteConstants.HashServices),
            new FooterLinkModel("Profesionales", RouteConstants.Professionals),
            new FooterLinkModel("Garantías", RouteConstants.HashGarantias)
        })
    };

    private int CurrentYear => DateTime.Now.Year;

    private List<AddressModel> Addresses = new()
    {
        new AddressModel { Street = "Av. Siempre Viva 742", City = "Buenos Aires", IsPrimary = true },
        new AddressModel { Street = "Calle Falsa 123", City = "Córdoba", IsPrimary = false }
    };

    private bool showAddressModal = false;
    private AddressModel newAddress = new();
    
    // Profile Picture Logic
    private string? ProfileImageDataUrl;
    private const long MaxFileSize = 1024 * 1024 * 5; // 5MB

    private async Task OnInputFileChange(InputFileChangeEventArgs e)
    {
        try
        {
            var file = e.File;
            if (file != null)
            {
                var resizedFile = await file.RequestImageFileAsync(file.ContentType, 300, 300);
                var buffer = new byte[resizedFile.Size];
                await resizedFile.OpenReadStream(MaxFileSize).ReadAsync(buffer);
                var base64 = Convert.ToBase64String(buffer);
                ProfileImageDataUrl = $"data:{file.ContentType};base64,{base64}";
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error uploading image: {ex.Message}");
        }
    }

    private void ShowAddAddressModal()
    {
        newAddress = new();
        showAddressModal = true;
    }

    private void CloseAddressModal()
    {
        showAddressModal = false;
    }

    private void SaveAddress()
    {
        if (newAddress.IsPrimary)
        {
            foreach (var addr in Addresses) addr.IsPrimary = false;
        }
        Addresses.Add(newAddress);
        showAddressModal = false;
    }

    private void DeleteAddress(AddressModel address)
    {
        Addresses.Remove(address);
    }

    public class AddressModel
    {
        public string Street { get; set; } = string.Empty;
        public string City { get; set; } = string.Empty;
        public bool IsPrimary { get; set; }
    }
}
