@using ClientLibrary.Models.Category
@using ClientLibrary.Helper
@inject IJSRuntime js

<section class="surface-card mb-4">
    <div class="d-flex flex-column flex-lg-row justify-content-between gap-3 align-items-lg-center mb-3">
        <div>
            <h4 class="mb-1">Rubros</h4>
            <p class="text-muted mb-0">Alta, baja y modificación de categorías</p>
        </div>
        <div class="d-flex gap-2">
            <input class="form-control" placeholder="Buscar rubro" @bind="SearchTerm" @bind:event="oninput" />
            <button class="btn btn-primary" @onclick="OnAddCategory">Agregar rubro</button>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table align-middle table-borderless mb-0">
            <thead class="text-muted small">
                <tr>
                    <th>Nombre</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (FilteredCategories?.Any() == true)
                {
                    @foreach (var category in FilteredCategories)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    @if (!string.IsNullOrEmpty(category.Icon))
                                    {
                                        <i class="@category.Icon text-muted"></i>
                                    }
                                    @category.Name
                                    @if (category.IsFeatured)
                                    {
                                        <span class="badge bg-primary-subtle text-primary rounded-pill ms-2">Destacado</span>
                                    }
                                </div>
                            </td>
                            <td class="text-end">
                                <div class="d-flex justify-content-end gap-2">
                                    <button class="btn btn-outline-primary btn-sm" @onclick="() => OnEditCategory.InvokeAsync(category)">Editar</button>
                                    <button class="btn btn-outline-danger btn-sm" @onclick="() => RequestDelete(category)">Eliminar</button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-center text-muted">
                            @(string.IsNullOrWhiteSpace(SearchTerm) ? "No hay rubros disponibles." : "No se encontraron rubros con ese nombre.")
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

<ConfirmationModal @ref="deleteConfirmModal"
                   Title="Eliminar rubro"
                   Message="@DeleteConfirmMessage"
                   ButtonText="Eliminar"
                   ButtonClass="btn-danger"
                   IsProcessing="IsDeleting"
                   OnConfirm="ExecuteDelete" />

@code {
    [Parameter] public IEnumerable<GetCategory> Categories { get; set; } = Enumerable.Empty<GetCategory>();
    [Parameter] public EventCallback OnAddCategory { get; set; }
    [Parameter] public EventCallback<GetCategory> OnEditCategory { get; set; }
    [Parameter] public EventCallback<Guid> OnDeleteCategory { get; set; }

    private string SearchTerm { get; set; } = string.Empty;

    private IEnumerable<GetCategory> FilteredCategories => 
        string.IsNullOrWhiteSpace(SearchTerm) 
            ? Categories 
            : Categories.Where(c => c.Name.Contains(SearchTerm, StringComparison.InvariantCultureIgnoreCase));

    // Delete Confirmation Modal State
    private ConfirmationModal deleteConfirmModal = default!;
    private Guid? PendingDeleteCategoryId { get; set; }
    private string DeleteConfirmMessage { get; set; } = "";
    private bool IsDeleting { get; set; }

    private async Task RequestDelete(GetCategory category)
    {
        PendingDeleteCategoryId = category.Id;
        DeleteConfirmMessage = $"¿Estás seguro de eliminar el rubro '{category.Name}'?";
        StateHasChanged();
        await deleteConfirmModal.Show();
    }

    private async Task ExecuteDelete()
    {
        if (PendingDeleteCategoryId is null) return;

        IsDeleting = true;
        try
        {
            await OnDeleteCategory.InvokeAsync(PendingDeleteCategoryId.Value);
        }
        finally
        {
            IsDeleting = false;
            await deleteConfirmModal.Hide();
            PendingDeleteCategoryId = null;
        }
    }
}
