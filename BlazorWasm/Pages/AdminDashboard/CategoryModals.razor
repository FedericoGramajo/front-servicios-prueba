@using ClientLibrary.Models.Category

@if (ShowAddCategoryModal)
{
    <div class="modal fade show" style="display:block;" tabindex="-1" role="dialog" aria-modal="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Agregar rubro</h5>
                    <button type="button" class="btn-close" @onclick="OnClose"></button>
                </div>

                <div class="modal-body">
                    <label class="form-label">Nombre del rubro</label>

                    <input class="form-control"
                           value="@NewCategoryName"
                           @oninput="@((ChangeEventArgs e) => NewCategoryNameChanged.InvokeAsync(e.Value?.ToString() ?? ""))" />

                    <small class="text-muted">
                        Cre치 un nombre claro para el nuevo rubro disponible en cat치logo.
                    </small>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-outline-secondary" @onclick="OnClose">Cancelar</button>
                    <button class="btn btn-primary" @onclick="OnSaveNew">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-backdrop fade show"></div>
}

@if (ShowEditCategoryModal)
{
    <div class="modal fade show" style="display:block;" tabindex="-1" role="dialog" aria-modal="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Editar rubro</h5>
                    <button type="button" class="btn-close" @onclick="OnClose"></button>
                </div>

                <div class="modal-body">
                    <label class="form-label">Nombre del rubro</label>

                    <input class="form-control"
                           value="@EditingCategoryName"
                           @oninput="@((ChangeEventArgs e) => EditingCategoryNameChanged.InvokeAsync(e.Value?.ToString() ?? ""))" />

                    <small class="text-muted">
                        Actualiz치 el nombre visible de @OriginalCategoryName.
                    </small>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-outline-secondary" @onclick="OnClose">Cancelar</button>
                    <button class="btn btn-primary" @onclick="OnSaveEdit">Guardar cambios</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-backdrop fade show"></div>
}

@code {
    // Par치metros desde el padre
    [Parameter] public bool ShowAddCategoryModal { get; set; }
    [Parameter] public bool ShowEditCategoryModal { get; set; }

    [Parameter] public string NewCategoryName { get; set; } = string.Empty;
    [Parameter] public EventCallback<string> NewCategoryNameChanged { get; set; }

    [Parameter] public string EditingCategoryName { get; set; } = string.Empty;
    [Parameter] public EventCallback<string> EditingCategoryNameChanged { get; set; }

    [Parameter] public string OriginalCategoryName { get; set; } = string.Empty;

    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback OnSaveNew { get; set; }
    [Parameter] public EventCallback OnSaveEdit { get; set; }
}
